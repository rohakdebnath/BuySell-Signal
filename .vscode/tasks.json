{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++2b",
                "-g",
                "-Wall",
                "-pedantic-errors",
                "-ggdb",
                "main.cpp",
                "curlFunctions.cpp",
                "functions.cpp",
                "-o",
                "main",
                "-ljsoncpp",
                "-lcurl",
                "-Wl,-rpath,/usr/local/lib", // Embed rpath into the executable
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "focus": true,
                "panel": "shared"
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
